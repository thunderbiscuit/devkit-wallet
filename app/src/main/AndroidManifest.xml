<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goldenraven.devkitwallet">

    <application
        android:name="com.goldenraven.devkitwallet.BdkSampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bdk_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BitcoindevkitSampleApp">

        <activity
            android:name="com.goldenraven.devkitwallet.DispatchActivity"
            android:theme="@style/Theme.BitcoindevkitSampleApp.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.goldenraven.devkitwallet.WalletChoiceActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.goldenraven.devkitwallet.wallet.WalletActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>